
#------------------------------------------------------------------------------------------
# Nginx
#------------------------------------------------------------------------------------------
alias nrestart='sudo service nginx restart'
alias rln='sudo service nginx reload'
alias te='sudo tail -f /var/log/nginx/error.log'

# Directory Shortcuts
alias vhosts='cd /etc/nginx/sites-available'
alias dev='cd /usr/share/nginx/html/dev'
alias stage='cd /usr/share/nginx/html/stage'
alias uat='cd /usr/share/nginx/html/uat'
alias prod='cd /usr/share/nginx/html/prod'
