# general aliases
alias c='clear'
alias fn='find . -name'
alias g='grep -r --color=auto '
alias h='history'
alias hg='history | grep'
alias l='ls -aCFl --color=auto'

# git aliases
alias gl='git pull'
alias gp='git push'

# Directory Shortcuts
alias utils='cd ~/utils'

# Apache
alias ra='sudo /etc/init.d/apache2 graceful'
alias te='tail -f /var/log/apache2/error.log'

# Apache - Directory Shortcuts
alias vhosts='cd /etc/apache2/sites-available'
alias dev='cd /var/www/dev'
alias stage='cd /var/www/stage'
alias uat='cd /var/www/uat'
alias prod='cd /var/www/prod'

# MySQL
alias rdb='sudo service mysql restart'

# PHP
alias prestart='sudo service php7.0-fpm restart'
alias prestart5='sudo service php5-fpm restart'
alias vp='sudo vi /etc/php/7.0/fpm/php.ini'
alias vp5='sudo vi /etc/php5/fpm/php.ini'

# Jenkins
alias jobs='cd /var/lib/jenkins/jobs'
alias work='cd /var/lib/jenkins/workspace'

# permission modifications
alias fixnpm='sudo chown -R $(whoami) ~/.npm'

# system update
alias update='sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && sudo reboot'

# edits to this file
alias va='vi ~/.bash_aliases'
alias sa='source ~/.bash_aliases'
